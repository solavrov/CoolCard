<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <!-- SHADOW LAYER -->
            <item android:left="@dimen/my_button_shadow_shift"
                  android:top="@dimen/my_button_shadow_shift">
                <shape>
                    <solid android:color="@color/colorBlack"/>
                    <corners android:radius="@dimen/my_button_corner_radius"/>
                </shape>
            </item>

            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/my_button_shadow_shift"
                  android:right="@dimen/my_button_shadow_shift">
                <shape>
                    <solid android:color="@color/colorWhite"/>
                    <corners android:radius="@dimen/my_button_corner_radius"/>
                </shape>
            </item>

        </layer-list>

    </item>

</selector>