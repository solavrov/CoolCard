<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SHADOW LAYER -->
    <item android:left="@dimen/background_shadow_shift"
          android:top="@dimen/background_shadow_shift">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners
                android:bottomLeftRadius="@dimen/background_radius"
                android:bottomRightRadius="@dimen/background_radius"
                android:topLeftRadius="@dimen/background_radius"
                android:topRightRadius="@dimen/background_radius"/>
        </shape>
    </item>

    <!-- CONTENT LAYER -->
    <item android:right="@dimen/background_shadow_shift"
          android:bottom="@dimen/background_shadow_shift">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners
                android:bottomLeftRadius="@dimen/background_radius"
                android:bottomRightRadius="@dimen/background_radius"
                android:topLeftRadius="@dimen/background_radius"
                android:topRightRadius="@dimen/background_radius"/>
        </shape>
    </item>

</layer-list>


